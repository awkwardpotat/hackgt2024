<body>
    <h1>Completed Tasks</h1>
    <ul class="task-list" id="taskList"></ul>
    <button class="back-button" onclick="goBack()">Go Back</button>

    <script>
        // Sample completed tasks; you can replace this with your actual tasks.
        const completedTasks = JSON.parse(localStorage.getItem('completedTasks')) || [];

        // Function to display completed tasks
        function displayTasks() {
            const taskList = document.getElementById('taskList');
            completedTasks.forEach(task => {
                const listItem = document.createElement('li');
                listItem.className = 'task-item';
                listItem.textContent = task;
                taskList.appendChild(listItem);
            });
        }

        // Call the function to display tasks when the page loads
        window.onload = displayTasks;

        // Function to go back to the previous page (or wherever you'd like)
        function goBack() {
            window.location.href = 'main.html'; // Change to your desired page
        }
    </script>
</body>
</html>
